<div class="lives-cards">
  <% @lives.each do |life|%>
    <div class="life">
      <%= link_to life_path(life), class: 'life-link', target:'_blank' do %>
        <h3><%= life.title %></h3>
          <%= cl_image_tag life.photo.key, height: 300, width: 400, crop: :fill %>
            <p><%= User.find(life.owner_id).city %></p>
            <p><%= life.price_per_day.round%>â‚¬ per day </p>
            <p><%= User.find(life.owner_id).first_name%> <%= User.find(life.owner_id).last_name.first%>.</p>
      <%end%>
    </div>
  <%end%>
</div>

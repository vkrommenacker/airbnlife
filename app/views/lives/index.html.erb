<div class=" row justify-content-center ">
  <div class="col-5">
    <%= form_with url: lives_path, method: :get, class: "d-flex search-bar" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Prêt(e) pour une nouvelle vie ?"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-success" %>
    <% end %>
  </div>
</div>

<div class="card m-5 bg-success rounded-pill">
    <h1 class="text-center text- m-2 p-4">Découvrez votre nouvelle vie avant de l'adopter!</h1>
</div>

<div class="cards-container">
  <% @lives.each do |life| %>
    <div class="box">
      <div class="imgBox">
        <%= link_to life_path(life), class: 'life-link' do %>
          <%= cl_image_tag life.photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
      </div>
      <div class="content">
        <h2><%= life.job_title.titleize %></h2>
        <%# <span><%= User.find(life.owner_id).city</span> %>
        <%# # <p><%= life.price_per_day.round€ per day</p> %>
        <%# <p><%= User.find(life.owner_id).first_name %>
        <%# <%= User.find(life.owner_id).last_name.first.</p> %>
      </div>
    </div>
  <% end %>
</div>
